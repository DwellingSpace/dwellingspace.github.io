---
layout: page.liquid
title: Blog Archive
pagination:
  reverse: true
  data: collections.post
  size: 3
---

<ul class="blog-posts">
{% for post in pagination.items %}
  <li class="article">
    <h1><a href="{{ post.url }}">{{ post.data.title }}</a></h1>
    <div class="meta">
      <div class="date-posted">{{ post.date | formatDatePublished }}</div>
      {% if post.data.tags contains "article" %}
        <span class="tag tag-article">Article</span>
      {% elsif post.data.tags contains "video" %}
        <span class="tag tag-video">Video</span>
      {% endif %}
    </div>
    <blockquote class="summary">{{ post.data.blurb }}</blockquote>
  </li>
{% endfor %}
</ul>

{% if pagination.previousPageHref %}<a href="{{ pagination.previousPageHref }}">&laquo; Prev Page</a>{% endif %}
{% if pagination.nextPageHref %}<a href="{{ pagination.nextPageHref }}">&raquo; Next Page</a>{% endif %}
